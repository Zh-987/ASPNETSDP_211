@model ItStepSDP211.Models.PlayersListViewModel
@{
    ViewBag.Title = "FlterExample";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Flter Example</h2>

<form method="get">
    <div class="form-inline">
        @Html.LabelFor(p => p.Team, "Team", new { @class = "control-label" })
        @Html.DropDownList("team", Model.Team as SelectList, htmlAttributes: new { @class = "form-control" })

        @Html.LabelFor(p => p.Position, "Position", new { @class = "control-label" })
        @Html.DropDownList("position", Model.Position as SelectList, htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Filter" class="btn btn-primary" />
    </div>
    </form>


<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Age
        </th>
        <th>
            Position
        </th>
        <th>
            Team
        </th>
    </tr>

    @foreach (var item in Model.Players)
    {
        <tr>
            <td>@Html.DisplayFor(ModelItem =>item.Name)</td>

            <td>@Html.DisplayFor(ModelItem =>item.Age)</td>

            <td>@Html.DisplayFor(ModelItem =>item.Position)</td>

            <td>@Html.DisplayFor(ModelItem =>item.Team.Name)</td>
        </tr>
    }

</table>