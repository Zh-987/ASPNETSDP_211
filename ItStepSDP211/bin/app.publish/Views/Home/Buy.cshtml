@model ItStepSDP211.Models.BuyTickets
@{
    ViewBag.Title = "Купить билеты в кино";
}

<div>

    <h2> Buy Tickets </h2>

    @using (Html.BeginForm("Buy", "Home", FormMethod.Post))
    {

        @Html.HiddenFor(m => m.BuyTicketsId)
        @Html.LabelFor(m => m.Person, "Input your name:")

        <br />

        @Html.TextBoxFor(m => m.Person)

        <br />
        <br />

        @Html.LabelFor(m => m.Email, "Input your Email:")

        <br />

        @Html.TextBoxFor(m => m.Email)

        <p><input type="submit" value="Send"></p>

    }

</div>