@using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <input type="hidden"/>
                <table>
                    <tr> <td><h1>Registration form</h1> </td></tr>

                    <tr>
                        <td><p>Login:</p></td>
                        <td>@Html.TextBox("Login", "Login:")</td>
                        <input type="text" name="Login" />
                    </tr>
                    <tr>
                        <td><p>Password:</p></td>
                        <td>@Html.Password("Password", "Password:")</td>
                        <input type="password" name="Password" />
                    </tr>

                    <tr>
                        <td>
                            <input checked="checked" id="Pol" name="Pol" type="radio" value="Man">
                            <span>Man</span> <br />
                            <input id="Pol" name="Pol" type="radio" value="Woman">
                            <span>Woman</span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.RadioButton("Pol", "Man", true)
                            <span>Man</span> <br />
                            
                            @Html.RadioButton("Pol", "Woman")

                            <span>Woman</span> <br />
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <input id="Enable" name="Enable" type="checkbox" value="false">
                            <input name="Enable" type="hidden" value="false">
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.CheckBox("Enable", true)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label for="Name">Name</label>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.Label("Name")
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <select id="countries" name="countries">
                                <option value="">Countries</option>
                                <option>Kazakhstan</option>
                                <option>Canada</option>
                                <option>China</option>
                                <option>Japan</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.DropDownList("countries", new SelectList(new string[] { "Kazakhstan", "Canada", "China", "Japan" }), "Countries")
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.DropDownList("Author", ViewBag.Movies as SelectList)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <select Length="9" id="countries" name="countries" multiple="multiple">
                                <option>Kazakhstan</option>
                                <option>Canada</option>
                                <option>China</option>
                                <option>Japan</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.ListBox("countries", new MultiSelectList(new string[] { "Kazakhstan", "Canada", "China", "Japan" }))
                        </td>
                    </tr>
                 


                    <tr>
                        <td>
                            <textarea cols="20" id="text" name="Text" rows="10">Hello <br /> Guys</textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextArea("text", "Hello <br /> Guys", 10, 20, null)
                        </td>
                    </tr>


                    <tr>
                        <td><input type="submit" value="Login" />  </td>
                    </tr>

                </table>
            }